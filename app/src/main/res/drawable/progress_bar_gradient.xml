<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid
                android:color="#ebebeb" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerColor="@color/green_700"
                    android:centerY="0.5"
                    android:endColor="@color/blue_300"
                    android:gradientRadius="100dip"
                    android:startColor="@color/yellow_500" />
            </shape>
        </clip>
    </item>

</layer-list>