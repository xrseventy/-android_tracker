<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <gradient
            android:centerColor="@color/green_700"
            android:endColor="@color/blue_300"
            android:startColor="@color/yellow_500"
            android:type="linear" />
        <corners android:radius="4dp" />
        <padding
            android:bottom="2dp"
            android:left="2dp"
            android:right="2dp"
            android:top="2dp" />
    </shape>
</item>
<item>
    <shape android:shape="rectangle">
        <solid android:color="@color/white" />
        <corners android:radius="2dp" />
        <size
            android:width="50dp"
            android:height="50dp" />
    </shape>
</item>
</layer-list>